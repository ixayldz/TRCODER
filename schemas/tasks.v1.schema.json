{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tasks.v1",
  "type": "object",
  "required": ["version", "project", "plan_id", "phases"],
  "properties": {
    "version": { "const": "tasks.v1" },
    "project": {
      "type": "object",
      "required": ["name"],
      "properties": { "name": { "type": "string" } }
    },
    "plan_id": { "type": "string" },
    "repo_commit": { "type": "string" },
    "defaults": { "type": "object" },
    "phases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "tasks"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "title", "type", "risk", "deps", "scope", "acceptance", "execution", "outputs"],
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "type": { "type": "string" },
                "risk": { "type": "string", "enum": ["low", "standard", "high"] },
                "deps": { "type": "array", "items": { "type": "string" } },
                "scope": {
                  "type": "object",
                  "properties": {
                    "paths": { "type": "array", "items": { "type": "string" } },
                    "exclude_paths": { "type": "array", "items": { "type": "string" } },
                    "symbols": { "type": "array", "items": { "type": "string" } },
                    "queries": { "type": "array", "items": { "type": "string" } }
                  }
                },
                "acceptance": { "type": "array", "items": { "type": "string" } },
                "execution": { "type": "object" },
                "outputs": { "type": "object" }
              }
            }
          }
        }
      }
    }
  }
}
